{
  "name": "popstop-desktop-app",
  "version": "1.0.0",
  "description": "An Electron-based desktop application for monitoring and tracking in-house drink orders in real-time.",
  "main": "dist/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently \"npm run start-react\" \"npm run start-electron\"",
    "start-react": "react-scripts start",
    "start-electron": "wait-on http://localhost:3000 && electron .",
    "build": "react-scripts build",
    "postbuild": "xcopy /E /I build dist",
    "build-electron": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PopStopOrg/desktop-app.git"
  },
  "keywords": [
    "Electron"
  ],
  "author": "PopStopOrg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PopStopOrg/desktop-app/issues"
  },
  "homepage": "./",
  "type": "commonjs",
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.0.2",
    "electron-reload": "^2.0.0-alpha.1",
    "postcss": "^8.5.1",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^4.9.5",
    "wait-on": "^8.0.2"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/cli": "^4.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
